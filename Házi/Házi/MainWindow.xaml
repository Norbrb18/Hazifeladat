        <Label Content="Equal to" VerticalContentAlignment="Bottom" HorizontalAlignment="Left" Margin="211,157,0,0" VerticalAlignment="Top" Width="105" FontSize="16" FontFamily="Showcard Gothic"/>
        <Label Content="More then" VerticalContentAlignment="Bottom" HorizontalAlignment="Left" Margin="341,157,0,0" VerticalAlignment="Top" Width="105" FontSize="16" FontFamily="Showcard Gothic"/>
        <Label Content="Kerlek gondolj 1 számra 0 és 10000 között"  HorizontalAlignment="Left" Margin="82,80,0,0" VerticalAlignment="Top" Height="45" Width="364" FontFamily="Showcard Gothic" FontSize="18"/>

